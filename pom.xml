      <version>1.6.1</version>
    </dependency>


    <dependency>
      <groupId>com.twitter</groupId>
      <artifactId>algebird-core_2.10</artifactId>
      <version>0.9.0</version>
    </dependency>

    <dependency>
      <groupId>com.google.guava</groupId>
